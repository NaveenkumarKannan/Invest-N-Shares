<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gf1"
    tools:context=".SignupActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start trading with us \nGet free live calls"
        android:textAllCaps="true"
        android:background="@drawable/stroke"
        android:padding="20dp"
        android:gravity="bottom|center"
        android:textColor="#ff6f00"
        android:textSize="20dp"
        android:textStyle="italic|bold" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#ffae00"
            android:textSize="23dp"
            android:textStyle="italic|bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Please fill in this form to create an account"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="italic|bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:padding="10dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#735b5b5b"
            android:fontFamily="@font/archivo_narrow_italic"
            android:hint="Name"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/etPh_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#735b5b5b"
            android:fontFamily="@font/archivo_narrow_italic"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/etBusiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#735b5b5b"
            android:fontFamily="@font/archivo_narrow_italic"
            android:hint="E-mail"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/etAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#735b5b5b"
            android:fontFamily="@font/archivo_narrow_italic"
            android:gravity="top"
            android:hint="City"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold|italic" />

        <CheckBox
            android:id="@+id/cbTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkBox1"
            android:layout_marginTop="5dp"
            android:checked="false"
            android:text="I accept the Terms Of Use / Privacy Policy"
            android:textColor="#ffffff"
            android:textStyle="italic|bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#f59c28"
            android:onClick="onSignup"
            android:padding="10dp"
            android:text="Signup Now"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
</ScrollView>
</LinearLayout>