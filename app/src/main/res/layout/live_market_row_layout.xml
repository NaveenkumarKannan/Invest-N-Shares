<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"

        android:gravity="center"
        android:background="@drawable/shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heading"
                    android:fontFamily="@font/im_fell_french_canon_sc"
                    android:id="@+id/tvLiveMarketTitle"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"
                    android:textColor="#0333f5"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="top"
                    android:fontFamily="@font/rationale"
                    android:text="Content: Heavy Selling in "
                    android:id="@+id/tvLiveMarketContent"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="top"
            android:id="@+id/tvLiveMarketDate"
            android:text="Post @ 21-06-2018"
            android:textColor="#afacac"
            android:textSize="10dp"
            android:textStyle="bold|italic" />


    </LinearLayout>
    
</LinearLayout>